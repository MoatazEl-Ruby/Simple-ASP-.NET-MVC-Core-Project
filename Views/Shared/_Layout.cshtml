<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ASP.NET_Lab_4.styles.css" asp-append-version="true" />
    <link rel="icon" type="image/x-icon" href="/image/iti-logo.png">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-black bg-gradient box-shadow mb-3 py-0">
            <div class="container-fluid">
                <a class="navbar-brand text-white-50" asp-area="" asp-controller="Home" asp-action="Index"><img src="/image/iti-logo.png" width="30" height="50" class="pb-2" /><span>| Information Technology Institute</span> </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-end">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link text-white-50 font-monospace btn-outline-dark ms-2 ps-2" asp-area="" asp-controller="Home" asp-action="Index">Home </a>
                        </li>
                        @if (!User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item ">
                                <a class="nav-link text-white-50 font-monospace btn-outline-dark ms-2 ps-2" asp-area="" asp-controller="Account" asp-action="Login">Sign In</a>
                            </li>

                            <li class="nav-item ">
                                <a class="nav-link text-white-50 font-monospace  btn-outline-dark ms-2 ps-2" asp-area="" asp-controller="Account" asp-action="Register">Sign Up </a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item ">
                                <a class="nav-link text-white-50 font-monospace   btn-outline-dark ms-2 ps-2" asp-area="" asp-controller="Account" asp-action="Logout">Sign Out <span class="text-danger text-capitalize">@User.Identity.Name</span></a>
                            </li>
                        }



                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="ps-5 pt-4">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer text-muted fixed-bottom bg-black bg-gradient font-monospace">
        <div class="container-fluid d-flex justify-content-between">
            <div>
                MADE BY <span class="text-danger">Moataz Gamal</span>

            </div>
            <span>
                FOLLOW ME
                <a class="text-primary ms-1 text-decoration-none" href="https://www.facebook.com/profile.php?id=100009763474129" target="_blank">
                    <i class="fa fa-facebook-square "></i>
                </a>
                <a class="text-primary ms-1 text-decoration-none" href="https://www.linkedin.com/in/moataz-gamal-906924213/" target="_blank">
                    <i class="fa fa-linkedin-square"></i>
                </a>
                <a class="text-white ms-1 text-decoration-none" href="https://github.com/MoatazEl-Ruby" target="_blank">
                    <i class="fa fa-github"></i>
                </a>
            </span>

        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>


    @*@await RenderSectionAsync("Scripts", required: false)*@
</body>
</html>
