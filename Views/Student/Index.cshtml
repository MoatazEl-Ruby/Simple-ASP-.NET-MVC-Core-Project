@model IEnumerable<Student>
@{

    ViewBag.Title = "Student List";

}





<div class="container">
    <div class="row">
        <table class="table table-bordered table-dark">
            <div class="d-flex justify-content-center">
                <a asp-action="Create" asp-controller="Student" class="btn btn-success text-center w-25 mt-3 mb-3">Add Student</a>

            </div>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Age</th>
                <th>Email</th>
                <th>Username</th>
                <th>Dept_Name</th>
                <th>Operations</th>
            </tr>
            @if (Model.Count() == 0)
            {
                <tr>
                    <td colspan="7"> NO EXISTING RECORDS</td>

                </tr>
            }
            @foreach (var items in Model)
            {

                <tr>
                    <td>@items.Id</td>
                    <td>@items.Name</td>
                    <td>@items.Age</td>
                    <td>@items.Email</td>
                    <td>@items.Username</td>
                    <td>@items.Department.DeptName</td>
                    <td>
                        <a asp-action="Details" asp-controller="Student" class="btn btn-light" asp-route-id="@items.Id">Details</a>

                        |
                        <a asp-action="Update" asp-controller="Student" class="btn btn-warning" asp-route-id="@items.Id">Update</a>
                        |
                        <a asp-action="Delete" asp-controller="Student" class="btn btn-danger" asp-route-id="@items.Id">Delete</a>

                    </td>

                </tr>
            }

        </table>
            <a asp-action="index" asp-controller="Home" class="btn btn-primary mb-3 col-1">Back</a>

    </div>
</div>

