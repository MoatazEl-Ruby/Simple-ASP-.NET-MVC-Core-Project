@model LoginViewModel
@{
    ViewData["Title"] = "login";
}


<div class="d-flex justify-content-center">
    <div class="text-center mt-5 bg-dark w-25  ">
        <p class="text-primary text-center fs-3 fw-bold">Login Form</p>

        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-warning"></div>
            <input asp-for="UserName" placeholder="Enter Username" />
            <div><span asp-validation-for="UserName" class="text-warning"></span></div>
            <br />
            <input asp-for="Password" placeholder="Enter Password" />
            <div><span asp-validation-for="Password" class="text-warning"></span></div>
            <br>

            <input type="submit" value="Login"  class="btn btn-primary mb-3"/>
        </form>

    </div>

</div>

