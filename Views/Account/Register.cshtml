@model User
@{
    ViewData["Title"] = "Sign Up";
}



<div class="d-flex justify-content-center home">
    <div class="text-center mt-5 bg-black w-25  ">
        <p class="text-danger text-center fs-3 fw-bold font-monospace typewriter7">Welcome to ITI</p>

        <form asp-action="Register" asp-controller="Account">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input asp-for="Name" placeholder="Enter Name" class="font-monospace text-center" />
            <div><span asp-validation-for="Name" class="text-danger"></span></div>
            <br />


            <input asp-for="Age" placeholder="Enter Age" class="font-monospace text-center" />
            <div><span asp-validation-for="Age" class="text-danger"></span></div>
            <br />


            <input asp-for="UserName" placeholder="Enter Username" class="font-monospace text-center" />
            <div><span asp-validation-for="UserName" class="text-danger"></span></div>
            <br />


            <input asp-for="Password" placeholder="Enter Password" class="font-monospace text-center" />
            <div><span asp-validation-for="Password" class="text-danger"></span></div>
            <br>

            <input asp-for="CPassword" placeholder="Comfirm Password" class="font-monospace text-center" />
            <div><span asp-validation-for="CPassword" class="text-danger"></span></div>
            <br>

            <input asp-for="Email" placeholder="Enter Email" class="font-monospace text-center" />
            <div><span asp-validation-for="Email" class="text-danger"></span></div>
            <br>

            <input type="submit" value="Sign Up" class="btn btn-outline-danger mb-3 font-monospace" />
        </form>

    </div>

</div>
